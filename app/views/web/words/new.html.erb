<% content_for :title, 'Menambahkan Kata Baru' %>

<h4 class="font-weight-bold mb-4">Menambahkan Kata Baru</h4>

<%= render 'shared/messages' %>

<%= form_with model: @word, url: words_path, method: :post, local: true do |form| %>
  <div class="form-group row">
    <%= form.label :kata_baru, class: 'col-md-12' %>
    <div class="col-md-12">
      <%= form.text_field :text, class: 'form-control', placeholder: 'Masukan kata baru disini' %>
      <small class="form-text text-muted">
        Kata tidak boleh kosong, tidak boleh mengandung spasi, tidak boleh mengandung angka,tidak boleh lebih dari 20 karakter, dan tidak boleh mengandung simbol.
      </small>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-12 d-flex justify-content-between align-items-center">
      <div>
        <%= form.submit "Tambahkan", class: 'btn btn-primary px-4'%>
      </div>
      <div>
        <%= link_to 'Kembali ke halaman awal', root_path %>
      </div>
    </div>
  </div>
<% end %>